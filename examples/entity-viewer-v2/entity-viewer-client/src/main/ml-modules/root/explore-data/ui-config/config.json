    "facets": {
      "component": "Facets",
      "config": {
        "selected": "#1acca8",
        "unselected": "#dfdfdf",
        "displayThreshold": 3,
        "displayShort": 3,
        "displayLong": 5,
        "items": [
          {
            "type": "dateRange",
            "name": "created",
            "tooltip": "Filter by date created."
