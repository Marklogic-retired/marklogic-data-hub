          {
            "type": "dateRange",
            "name": "updated",
            "tooltip": "Filter by date updated."
          },
          {
            "type": "category",
            "name": "sources",
            "tooltip": "Filter by source."
          },
          {
            "type": "category",
            "name": "status",
            "tooltip": "Filter by status."
          },
          {
            "type": "category",
            "name": "country",
            "tooltip": "Filter by country."
          },
          {
            "type": "category",
            "name": "area",
            "tooltip": "Filter by area."
          }
