                    },
                    {
                        "type": "block",
                        "color": "#5d6aaa",
                        "value": "4"
                    }
                ]
            },
            "sources": {
                "id": "sources",
                "title": "Sources",
                "dataPath": "result[0].extracted.person.sources",
                "icon": "sources",
                "width": "400px",
                "metadata": [
                    {
                        "type": "block",
                        "color": "#96bde4",
                        "value": "B"
                    },
                    {
                        "type": "block",
                        "color": "#5d6aaa",
                        "value": "4"
                    }
                ]
            },
            "address": {
                "id": "address",
                "title": "Address",
                "width": "600px",
                "dataPath": "result[0].extracted.person.address",
                "cols": [
                    {
                        "title": "Street",
                        "value": "street",
                        "width": "320px"
                    },
                    {
                        "title": "City",
                        "value": "city",
                        "width": "140px"
                    },
                    {
                        "title": "State",
                        "value": "state",
                        "width": "50px"
                    },
                    {
                        "title": "Zip",
                        "value": "zip.fiveDigit",
