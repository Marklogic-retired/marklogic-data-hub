# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{jsx,ts,tsx}]
indent_size = 2
max_line_length = 120

[*.sjs]
indent_size = 2

[*.mjs]
indent_size = 2

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.xqy]
indent_size = 2

[*.xml]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indend_size = 2

[*.md]
trim_trailing_whitespace = false

[*.mdown]
trim_trailing_whitespace = false
